<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Odoo IT now: Pre Loader in website -->
    <template id="user_navbar_odooitnow" inherit_id="daeris_saas.website_confirmar">
        <xpath expr="//section" position="inside">
            <div id="preloader">
                <div id="status">&amp;nbsp;</div>
            </div>
            <script language="javascript" type="text/javascript">
            $(document).ready(function(){
                $("#myform").on("submit", function(){
                    $("#preloader").fadeIn();
                });//submit
            });//document ready
            </script>
        </xpath>
    </template>
 
 </odoo>